@model IEnumerable<Lab_3.Models.Author>
@{
    ViewBag.Title = "Список авторов";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Добавить автора", "Create")
</p>
<table class="table">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
    <tr>
        <td>@item.Surname</td>
        <td>@item.Name</td>
        <td>@item.Patronymic</td>
        <td>
            @Html.ActionLink("Детали", "Details", new { id = item.Id }) <br />
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "text-warning " }) <br />
            @Html.ActionLink("Список книг автора", "Index", "Books", new { search = item.Surname }, null) <br />
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "text-danger" })
        </td>
    </tr>
    }
</table>