@model IEnumerable<Lab_3.Models.Book>
@{
    ViewBag.Title = "Каталог книг";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Добавить книгу", "Create")
</p>
<table class="table">
    <tr>
        <th>Автор</th>
        <th>Заголовок</th>
        <th>Описание</th>
        <th>Год публикации</th>
        <th>Количество страниц</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a href="/Authors/Details/@item.Author.Id">@item.Author.ToString()</a></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Year</td>
            <td>@item.NumPages</td>
            <td>
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) <br />
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "text-warning " }) <br />
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "text-danger" })
            </td>
        </tr>
    }
</table>