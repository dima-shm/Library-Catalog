@model Lab_3.Models.Book
@{
    ViewBag.Title = "Добавить книгу";
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Заголовок</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Автор</label>
            <div class="col-md-10">
                @Html.DropDownList("AuthorId", new SelectList(ViewBag.Authors, "Id", ""), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AuthorId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Описание</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Год публикации</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Year,
                    new { htmlAttributes = new { @class = "form-control", min = "1", max = DateTime.Now, step = "1" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Количество страниц</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumPages,
                    new { htmlAttributes = new { @class = "form-control", min = "1", max = "5000", step = "1" } })
                @Html.ValidationMessageFor(model => model.NumPages, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
}